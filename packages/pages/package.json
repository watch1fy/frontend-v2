{
  "name": "@watchify/pages",
  "version": "0.0.1",
  "repository": "https://github.com/watch1fy/frontend-v2.git",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "swc src -d dist",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo && rm -rf ./node_modules"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/src/index.js",
    "./*": [
      "./dist/src/*.js",
      "./dist/src/*/index.js"
    ],
    "./package.json": [
      "./package.json"
    ]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  },
  "peerDependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "dependencies": {
    "@storybook/react": "^8.1.6",
    "@swc/helpers": "^0.5.1",
    "@watchify/components": "workspace:*",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.25",
    "@types/react": "^18.0.37",
    "chokidar": "^3.5.3",
    "eslint": "^8.38.0",
    "eslint-config-watchify": "workspace:*",
    "typescript": "^5.4.5"
  }
}
