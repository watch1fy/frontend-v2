{
  "name": "@watchify/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/watch1fy/frontend-v2.git",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-tailwind && swc src -d dist",
    "copy-tailwind": "mkdir -p dist && cp ./src/tailwind-preset.js dist/tailwind-preset.js",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ],
    "./tailwind": ["./dist/tailwind-preset.js"]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ],
      "tailwind": [
        "dist/tailwind.d.ts"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "tailwind": [
          "dist/tailwind.d.cts"
        ]
      }
    }
  },
  "peerDependencies": {
    "next": "*",
    "react": "^17.0.0 || ^18.0.0-0",
    "react-dom": "^17.0.0 || ^18.0.0-0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.5.0",
    "@nextui-org/react": "^2.3.5",
    "@swc/helpers": "^0.5.1",
    "@watchify/lib": "workspace:*",
    "clsx": "^1.2.1",
    "framer-motion": "^11.1.7",
    "react-hook-form": "^7.51.5",
    "react-icons": "^5.2.1",
    "sonner": "^1.4.41"
  },
  "devDependencies": {
    "@storybook/react": "^7.0.6",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "@types/react": "^18.0.37",
    "autoprefixer": "10.4.19",
    "chokidar": "^3.5.3",
    "eslint": "^8.38.0",
    "eslint-config-watchify": "workspace:*",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "5.0.4"
  }
}