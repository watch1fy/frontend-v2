{
  "name": "@watchify/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/watch1fy/frontend-v2.git",
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rm -rf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-globals && swc src -d dist",
    "copy-globals": "mkdir -p dist && cp ./src/tailwind-preset.js ./src/globals.css dist/",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf ./dist && rm -rf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ],
    "./tailwind": [
      "./dist/tailwind-preset.js"
    ],
    "./globals": [
      "./dist/globals.css"
    ]
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ],
      "tailwind": [
        "dist/tailwind.d.ts"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "tailwind": [
          "dist/tailwind.d.cts"
        ]
      }
    }
  },
  "peerDependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.6.0",
    "@nextui-org/react": "^2.4.1",
    "@nextui-org/theme": "^2.2.5",
    "@swc/helpers": "^0.5.11",
    "@watchify/lib": "workspace:*",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.10",
    "react-hook-form": "^7.51.5",
    "react-icons": "^5.2.1",
    "sonner": "^1.4.41"
  },
  "devDependencies": {
    "@storybook/react": "^8.1.6",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.25",
    "@types/react": "^18.3.3",
    "autoprefixer": "10.4.19",
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "eslint-config-watchify": "workspace:*",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "5.4.5"
  }
}
